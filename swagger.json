      "GetLibrosAll": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/GetLibrosAll_inner"
        }
      },
      "BodyLibrosPut": {
        "type": "object",
        "properties": {
          "isbn13": {
            "type": "string",
            "example": "9780307277670"
