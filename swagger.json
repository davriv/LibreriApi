        "explode": false,
        "schema": {
          "type": "string"
        }
      },
      "idLibro": {
        "name": "idLibro",
        "in": "path",
        "description": "Id del libro",
        "required": true,
        "style": "simple",
        "explode": false,
        "schema": {
          "type": "string"
        }
      }
    }
  },
  "definitions": {
    "Autor": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "idBooks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Libro": {
      "type": "object",
      "required": ["title", "idAuthors", "isbn"],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "idAuthors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "isbn": {
          "type": "string"
        },
        "isbn13": {
          "type": "string"
        },
        "publication_year": {
          "type": "string"
        },
        "language": {
          "type": "string"
        },
        "publisher": {
          "type": "string"
        },
        "pages": {
          "type": "integer"
        },
        "price": {
          "type": "number"
        },
        "image_url": {
          "type": "string"
        },
        "small_image_url": {
          "type": "string"
        }
      }
    },
    "Usuario": {
      "type": "object",
      "required": ["username", "email", "nombre", "apellido"],
      "properties": {
        "id": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "nombre": {
          "type": "string"
        },
        "apellido": {
          "type": "string"
        },
        "tipo": {
          "type": "string",
          "enum": ["admin", "cliente"]
        }
      }
    },
    "Comentario": {
      "type": "object",
      "required": ["nombre", "email", "texto"],
      "properties": {
        "id": {
          "type": "string"
        },
        "nombre": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "libro_id": {
          "type": "string"
        },
        "texto": {
          "type": "string"
        },
        "fecha": {
          "type": "string"
        }
      }
    }
  }
}
